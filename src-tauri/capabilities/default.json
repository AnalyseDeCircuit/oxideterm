{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "opener:default",
    "fs:default",
    "core:event:default",
    {
      "identifier": "core:event:allow-listen",
      "allow": [
        { "event": "profiler:update:*" },
        { "event": "connection:*" },
        { "event": "health:*" },
        { "event": "sftp:*" },
        { "event": "transfer:*" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        { "path": "$HOME" },
        { "path": "$HOME/*" },
        { "path": "$HOME/**/*" },
        { "path": "/*" },
        { "path": "/**/*" },
        { "path": "[A-Z]:/*" },
        { "path": "[A-Z]:/**/*" }
      ]
    }
  ],
  "remote": {
    "urls": ["ws://localhost:*", "ws://127.0.0.1:*"]
  }
}